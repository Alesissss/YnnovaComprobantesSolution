                    <div class="col-md-6 mb-2"><label>RUC</label><input type="text" id="txt_Comp_RUC" class="form-control form-control-sm" maxlength="11"></div>
                    <div class="col-md-6 mb-2"><label>Serie</label><input type="text" id="txt_Comp_Serie" class="form-control form-control-sm"></div>
                    <div class="col-md-6 mb-2"><label>Número</label><input type="text" id="txt_Comp_Numero" class="form-control form-control-sm"></div>
