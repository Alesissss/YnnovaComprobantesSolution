<script>
    var liqId = $('#hdn_LiqId').val();

    $(document).ready(function () {
        cargarTodo();
        // Inicializamos los DropZones de forma segura
        setupDropZone('dropZone_Ant', 'file_V_Ant', 'previewArea_Ant', 'lbl_DropInfo_Ant', 'icon_Preview_Ant', 'name_Preview_Ant', 'btn_RemoveFile_Ant');
        setupDropZone('dropZone_Reem', 'file_V_Reem', 'previewArea_Reem', 'lbl_DropInfo_Reem', 'icon_Preview_Reem', 'name_Preview_Reem', 'btn_RemoveFile_Reem');

        // Fechas Anticipo lógica
        $('#txt_Ant_FechaSolicitud').on('change', function () {
            let fechaSeleccionada = $(this).val();
            if (fechaSeleccionada) {
                let date = new Date(fechaSeleccionada);
                date.setDate(date.getDate() + 7);
                let fechaLimite = date.toISOString().split('T')[0];
                $('#txt_Ant_FechaLimiteRendicion').val(fechaLimite);
            }
        });
        if ($('#txt_Ant_FechaSolicitud').val()) $('#txt_Ant_FechaSolicitud').trigger('change');
    });

    // ================================================================
    // FUNCIÓN DROPZONE CORREGIDA (Sin recursividad)
    // ================================================================
    function setupDropZone(dropZoneId, fileInputId, previewId, infoId, iconId, nameId, removeBtnId) {
        const dropZone = $('#' + dropZoneId);
        const fileInput = $('#' + fileInputId);

        // Click en zona -> abre input (Input está FUERA, no hay burbujeo infinito)
        dropZone.on('click', function(e) {
            if(e.target.id !== removeBtnId && e.target.parentNode.id !== removeBtnId) {
                fileInput.trigger('click');
            }
        });

        // Drag & Drop visual effects
        dropZone.on('dragover', function(e) { e.preventDefault(); e.stopPropagation(); $(this).addClass('drag-over'); });
        dropZone.on('dragleave', function(e) { e.preventDefault(); e.stopPropagation(); $(this).removeClass('drag-over'); });

        // Drop Action
        dropZone.on('drop', function(e) {
            e.preventDefault(); e.stopPropagation(); $(this).removeClass('drag-over');
            if (e.originalEvent.dataTransfer.files.length) {
                fileInput[0].files = e.originalEvent.dataTransfer.files;
                mostrarPreviewLocal(fileInput[0].files[0]);
            }
        });

        // Input Change Action
        fileInput.on('change', function() { if(this.files.length) mostrarPreviewLocal(this.files[0]); });

        // Remove File Action
        $('#' + removeBtnId).on('click', function(e){
            e.stopPropagation(); e.preventDefault();
            fileInput.val('');
            $('#' + previewId).hide();
            $('#' + infoId).show();
        });

        function mostrarPreviewLocal(file) {
            $('#' + infoId).hide();
            $('#' + nameId).text(file.name);
            $('#' + previewId).show();

            if(file.type.includes('pdf')) $('#' + iconId).attr('class', 'fas fa-file-pdf text-danger fa-2x');
            else $('#' + iconId).attr('class', 'fas fa-file-image text-primary fa-2x');
        }
    }

    function cargarTodo() {
        cargarCabecera();
        cargarAnticipos();
        cargarComprobantes();
        cargarPlanilla();
        cargarReembolsos();
        cargarResumen();
        cargarChat();
        fct_GetTipoRendicion();
        fct_GetBancos();
        fct_GetMonedas();
    }

    // --- COMBOS ---
    function fct_GetTipoRendicion() {
        $.getJSON('/Liquidacion/GetTiposRendicionesData', function (res) {
            if (res.status) {
                let data = res.data.map(t => ({ id: t.id, text: t.codigo + ' - ' + t.descripcion }));
                $('#cbx_Ant_TipoRendicion').select2({ theme: 'bootstrap4', data: data, placeholder: "Seleccionar Tipo" });
            }
        });
    }
    function fct_GetBancos() {
        $.getJSON('/Liquidacion/GetBancosData', function (res) {
            if (res.status) {
                let data = res.data.map(b => ({ id: b.id, text: b.codigo + ' - ' + b.descripcion }));
                $('#cbx_Ant_Banco').select2({ theme: 'bootstrap4', data: data, placeholder: "Seleccionar Banco" });
                $('#cbx_Reem_Banco').select2({ theme: 'bootstrap4', data: data, placeholder: "Seleccionar Banco" });
            }
        });
    }
    function fct_GetMonedas() {
        $.getJSON('/Liquidacion/GetMonedasData', function (res) {
            if (res.status) {
                let opt = '<option value="" disabled selected>--SELECCIONAR--</option>';
                res.data.forEach(m => opt += `<option value="${m.id}">${m.simbolo} ${m.nombre}</option>`);
                $('#cbx_Ant_Moneda').html(opt);
                $('#cbx_Reem_Moneda').html(opt);
            }
        });
    }

    // --- CARGAS DE DATOS ---
    function cargarCabecera() {
        $.getJSON('/Liquidacion/ObtenerDatosCarpeta', { liquidacionId: liqId }, function(res) {
            if(res.status) {
                $('#lbl_Codigo').text(res.data.codigoGenerado);
                $('#lbl_Empresa').text(res.data.empresa);
                $('#lbl_Responsable').html(`<i class="fas fa-user"></i> ${res.data.usuario}`);
                let badge = res.data.estado === 'Abierta' ? '<span class="badge badge-success px-3">ABIERTA</span>' : '<span class="badge badge-secondary px-3">CERRADA</span>';
                $('#div_EstadoBadge').html(badge);
                if(res.data.esCerrada) {
                    $('#btn_CerrarLiq').prop('disabled', true).text('LIQUIDACIÓN CERRADA');
                    $('.btn-auditar').prop('disabled', true);
                }
            }
        });
    }

    function cargarResumen() {
        $.getJSON('/Liquidacion/ObtenerResumenFinanciero', { liquidacionId: liqId }, function(res) {
            if(res.status) {
                $('#lbl_Ingresos').text("S/ " + res.ingresos.toFixed(2));
                $('#lbl_Egresos').text("S/ " + res.gastos.toFixed(2));
                let saldo = res.saldo;
                $('#lbl_Saldo').text("S/ " + Math.abs(saldo).toFixed(2));
                $('#lbl_Saldo').removeClass('badge-success badge-danger badge-light');
                $('#lbl_AccionSaldo').remove();

                if(Math.abs(saldo) < 0.01) {
                     $('#lbl_Saldo').addClass('badge-light');
                     $('#lbl_Saldo').after('<br><small class="text-muted font-weight-bold" id="lbl_AccionSaldo">(CUADRADO)</small>');
                } else if(saldo > 0) {
                    $('#lbl_Saldo').addClass('badge-success');
                    $('#lbl_Saldo').after('<br><small class="text-success font-weight-bold" id="lbl_AccionSaldo">(DEVOLUCIÓN)</small>');
                } else {
                    $('#lbl_Saldo').addClass('badge-danger');
                    $('#lbl_Saldo').after('<br><small class="text-danger font-weight-bold" id="lbl_AccionSaldo">(REEMBOLSO)</small>');
                }
            }
        });
    }

    function cargarAnticipos() {
        $.getJSON('/Liquidacion/ListarAnticipos', { liquidacionId: liqId }, function(res) {
            let html = '';
            res.data.forEach(a => {
                let accion = '';
                if(a.estado === 'Generado') {
                    accion = `<button class="btn btn-primary btn-xs btn-block btn-auditar" onclick="abrirModalVoucher(${a.id})"><i class="fas fa-upload mr-1"></i> Subir Voucher</button>`;
                } else if (a.estado === 'Transferido') {
                    accion = `<a href="${a.voucherUrl}" target="_blank" class="btn btn-info btn-xs btn-block"><i class="fas fa-eye mr-1"></i> Ver Voucher</a>`;
                }
                // SE RESPETA a.moneda
                html += `<tr>
                            <td>${a.tipoRendicion}<br><small class="text-muted">${a.banco}</small></td>
                            <td>${a.moneda}</td>
                            <td class="font-weight-bold text-right">${a.monto.toFixed(2)}</td>
                            <td><span class="badge badge-${a.estado==='Transferido'?'success':'warning'}">${a.estado}</span></td>
                            <td>${accion}</td>
                         </tr>`;
            });
            $('#tbl_Anticipos tbody').html(html);
        });
    }

    // LISTAR REEMBOLSOS (Usando la API que incluiste en tu controlador)
    function cargarReembolsos() {
        $.getJSON('/Liquidacion/ListarReembolsos', { liquidacionId: liqId }, function(res) {
             let html = '';
             if(res.status && res.data) {
                res.data.forEach(r => {
                    let tipo = r.esDevolucion
                        ? '<span class="badge badge-success">Devolución (Usuario)</span>'
                        : '<span class="badge badge-primary">Reembolso (Empresa)</span>';
                    let voucher = r.voucherUrl
                        ? `<a href="${r.voucherUrl}" target="_blank" class="btn btn-info btn-xs"><i class="fas fa-eye"></i></a>`
                        : '-';
                    // SE RESPETA r.moneda
                    html += `<tr>
                                <td>${r.fecha}</td>
                                <td>${tipo}</td>
                                <td>${r.banco}</td>
                                <td>${r.moneda}</td>
                                <td class="text-right font-weight-bold">${r.monto.toFixed(2)}</td>
                                <td class="text-center">${voucher}</td>
                             </tr>`;
                });
             }
             $('#tbl_Reembolsos tbody').html(html);
        });
    }

    // --- ACCIONES DE REGISTRO ---

    function fct_RegistrarAnticipo() {
        let obj = {
            LiquidacionId: liqId,
            FechaSolicitud: $('#txt_Ant_FechaSolicitud').val(),
            FechaLimiteRendicion: $('#txt_Ant_FechaLimiteRendicion').val(),
            TipoRendicionId: $('#cbx_Ant_TipoRendicion').val(),
            BancoId: $('#cbx_Ant_Banco').val(),
            MonedaId: $('#cbx_Ant_Moneda').val(),
            Monto: $('#txt_Ant_Monto').val(),
            Descripcion: $('#txt_Ant_Descripcion').val()
        };
        if (!obj.Monto || !obj.FechaSolicitud) { toastr.warning("Complete Fecha y Monto"); return; }

        $.post('/Liquidacion/SolicitarAnticipo', obj, function(res) {
            if(res.status) {
                toastr.success("Anticipo registrado");
                $('#mdl_NuevoAnticipo').modal('hide');
                cargarTodo();
            } else {
                toastr.error(res.message);
            }
        });
    }

    function abrirModalVoucher(id) {
        $('#hdn_AnticipoId_Transfer').val(id);
        $('#file_V_Ant').val('');
        $('#previewArea_Ant').hide();
        $('#lbl_DropInfo_Ant').show();
        $('#mdl_Voucher').modal('show');
    }

    function fct_GuardarTransferencia() {
        let fd = new FormData();
        fd.append('anticipoId', $('#hdn_AnticipoId_Transfer').val());
        fd.append('nroOperacion', $('#txt_Op').val());
        fd.append('fechaTransferencia', $('#txt_FechaTransfer').val());
        fd.append('archivoVoucher', $('#file_V_Ant')[0].files[0]);

        if(!$('#file_V_Ant')[0].files[0]){ toastr.warning("Adjunte el voucher"); return; }

        $.ajax({
            url: '/Liquidacion/RegistrarTransferenciaAnticipo',
            type: 'POST', data: fd, processData: false, contentType: false,
            success: function(res) {
                if(res.status) {
                    toastr.success("Transferencia registrada");
                    $('#mdl_Voucher').modal('hide');
                    cargarTodo();
                } else { toastr.error(res.message); }
            }
        });
    }

    function abrirModalReembolso() {
        $('#txt_Reem_Fecha').val('');
        $('#txt_Reem_Monto').val('');
        $('#txt_Reem_Op').val('');
        $('#file_V_Reem').val('');
        $('#previewArea_Reem').hide();
        $('#lbl_DropInfo_Reem').show();
        $('#mdl_NuevoReembolso').modal('show');
    }

    function fct_RegistrarPagoReembolso() {
        let fd = new FormData();
        fd.append('liquidacionId', liqId);
        fd.append('monto', $('#txt_Reem_Monto').val());
        fd.append('esDevolucion', false);
        fd.append('nroOperacion', $('#txt_Reem_Op').val());
        fd.append('fechaPago', $('#txt_Reem_Fecha').val());
        fd.append('bancoId', $('#cbx_Reem_Banco').val());
        fd.append('monedaId', $('#cbx_Reem_Moneda').val());
        fd.append('archivoVoucher', $('#file_V_Reem')[0].files[0]);

        if(!$('#txt_Reem_Monto').val()) { toastr.warning("Ingrese el monto"); return; }
        if(!$('#file_V_Reem')[0].files[0]) { toastr.warning("El voucher es obligatorio"); return; }

        $.ajax({
            url: '/Liquidacion/RegistrarPagoCierre',
            type: 'POST', data: fd, processData: false, contentType: false,
            success: function(res) {
                if(res.status) {
                    toastr.success(res.message);
                    $('#mdl_NuevoReembolso').modal('hide');
                    cargarTodo();
                } else {
                    toastr.error(res.message);
                }
            }
        });
    }

    // --- CARGAS COMPROBANTES Y PLANILLA ---
    function cargarComprobantes() {
        $.getJSON('/Liquidacion/ListarComprobantes', { liquidacionId: liqId }, function(res) {
            let html = '';
            res.data.forEach(c => {
                let botones = c.estado === 'Pendiente'
                    ? `<div class="btn-group">
                         <button class="btn btn-success btn-xs btn-auditar" onclick="evaluarComp(${c.id}, 'Aprobado')"><i class="fas fa-check"></i></button>
                         <button class="btn btn-danger btn-xs btn-auditar" onclick="evaluarComp(${c.id}, 'Rechazado')"><i class="fas fa-times"></i></button>
                       </div>`
                    : `<span class="text-muted small"><i class="fas fa-lock"></i> Auditado</span>`;

                let badge = c.estado === 'Aprobado' ? 'success' : (c.estado === 'Rechazado' ? 'danger' : 'warning');
                // SE RESPETA c.moneda
                html += `<tr>
                            <td>${c.fecha}</td>
                            <td>${c.proveedor}<br><small>${c.serie}</small></td>
                            <td>${c.moneda}</td>
                            <td class="text-right font-weight-bold">${c.monto.toFixed(2)}</td>
                            <td class="text-center"><span class="badge badge-${badge}">${c.estado}</span></td>
                            <td class="text-center">${botones}</td>
                            <td class="text-center"><a href="${c.archivoUrl}" target="_blank" class="btn btn-default btn-xs"><i class="fas fa-eye"></i></a></td>
                         </tr>`;
            });
            $('#tbl_Comprobantes tbody').html(html);
        });
    }

    function evaluarComp(id, estado) {
        $.post('/Liquidacion/EvaluarComprobante', { id: id, estado: estado }, function(res) {
            if(res.status) { toastr.info("Comprobante " + estado); cargarTodo(); }
        });
    }

    function cargarPlanilla() {
        $.getJSON('/Liquidacion/ListarDetallesPlanilla', { liquidacionId: liqId }, function(res) {
            let html = '';
            res.data.forEach(d => {
                let estadoHtml = d.aprobado ? '<span class="badge badge-success">OK</span>' : '<span class="badge badge-danger">Rechazado</span>';
                let accion = d.aprobado ? `<button class="btn btn-outline-danger btn-xs btn-auditar" onclick="rechazarItem(${d.id})"><i class="fas fa-times"></i></button>` : '';
                html += `<tr>
                            <td>${d.fecha}</td>
                            <td>${d.motivo}<br><small>${d.lugarOrigen} -> ${d.lugarDestino}</small></td>
                            <td class="text-right">S/ ${d.monto.toFixed(2)}</td>
                            <td class="text-center">${estadoHtml}</td>
                            <td class="text-center">${accion}</td>
                         </tr>`;
            });
            $('#tbl_Planilla tbody').html(html);
        });
    }

    function rechazarItem(id) {
        $.post('/Liquidacion/RechazarItemPlanilla', { id: id }, function(res) {
            if(res.status) { toastr.warning("Item rechazado"); cargarTodo(); }
        });
    }

    // --- CHAT Y CIERRE ---
    function cargarChat() {
        $.getJSON('/Liquidacion/ObtenerObservaciones', { liquidacionId: liqId }, function(res) {
            let html = '';
            if(res.status) {
                res.data.forEach(msg => {
                    let align = msg.esMio ? 'text-right' : 'text-left';
                    let bg = msg.esMio ? 'bg-primary text-white' : 'bg-light text-dark';
                    let user = msg.esMio ? 'Yo' : msg.nombreUsuario;
                    html += `<div class="${align} mb-2">
                                <small class="text-muted font-weight-bold">${user} <span style="font-size:0.7em">${msg.fecha}</span></small>
                                <div class="p-2 rounded ${bg}" style="display:inline-block; max-width:80%; border-radius: 10px;">${msg.mensaje}</div>
                             </div>`;
                });
            }
            $('#div_ChatBox').html(html);
            $('#div_ChatBox').scrollTop($('#div_ChatBox')[0].scrollHeight);
        });
    }

    function enviarObservacion() {
        let txt = $('#txt_Mensaje').val();
        if(!txt.trim()) return;
        $.post('/Liquidacion/RegistrarObservacion', { liquidacionId: liqId, mensaje: txt, prioridad: 'M' }, function(res) {
            if(res.status) { $('#txt_Mensaje').val(''); cargarChat(); }
        });
    }

    function fct_CerrarLiquidacion() {
        Swal.fire({
            title: '¿Cerrar Liquidación?',
            text: "El saldo debe ser 0.00 para proceder.",
            icon: 'warning', showCancelButton: true, confirmButtonColor: '#d33', confirmButtonText: 'Sí, Cerrar Caja',
        }).then((result) => {
            if (result.isConfirmed) {
                $.post('/Liquidacion/CerrarLiquidacion', { liquidacionId: liqId }, function(res) {
                    if(res.status) {
                        Swal.fire('Procesado', res.message, 'success').then(() => { location.reload(); });
                    } else { toastr.error(res.message); }
                });
            }
        });
    }
</script>

