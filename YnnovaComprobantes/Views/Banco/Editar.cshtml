@model YnnovaComprobantes.Models.Banco
@{
    ViewData["Title"] = "Editar Banco";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="text-center mb-0">Editar Banco</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="txt_Codigo">Código</label>
                            <div class="input-group">
                                <input type="text" id="txt_Codigo" class="form-control" placeholder="Código" value="@Model.Codigo">
                            </div>
                        </div>
                       
                        <div class="col-md-12 mb-3">
                            <label for="txt_Descripcion">Descripción</label>
                            <div class="input-group">
                                <textarea id="txt_Descripcion"
                                          class="form-control"
                                          placeholder="Introduce la descripción aquí..."
                                          rows="4">@Model.Descripcion</textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="cbx_Estado">Estado</label>
                            <div class="input-group">
                                <select id="cbx_Estado" class="form-control">
                                    <option value="" disabled selected>--SELECCIONAR--</option>
                                    <option value="1">Activo</option>
                                    <option value="0">No Activo</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 text-center">
                            <button id="btn_Volver" type="button" class="btn btn-danger">Volver</button>
                            <button id="btn_Editar" type="button" class="btn btn-primary">Editar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $('#cbx_Estado').val('@(Model.Estado ? 1 : 0)');

        $("#btn_Editar").click(function () {
            let codigo = $("#txt_Codigo").val().trim();
            let descripcion = $("#txt_Descripcion").val().trim();
            let estado = $('#cbx_Estado').val();

            if (!codigo || !descripcion || !estado) {
                toastr.warning("Todos los campos son obligatorios", "MENSAJE DE SISTEMA");
                return;
            }

            Swal.fire({
                title: "¿Estás seguro?",
                text: "Esta acción editará el Banco. ¿Deseas continuar?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Sí, editar Banco",
                cancelButtonText: "Cancelar",
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {

                    let formData = new FormData();
                    formData.append("Id", @Model.Id);
                    formData.append("Codigo", codigo);
                    formData.append("Descripcion", descripcion);
                    formData.append("Estado", estado == 1 ? true : false);

                    $.ajax({
                        url: "/Banco/EditarBanco",
                        type: "POST",
                        processData: false,
                        contentType: false,
                        data: formData,
                        success: function (response) {
                            if (response.status === true) {
                                toastr.success(response.message, "MENSAJE DE SISTEMA");
                                window.location.href = "/TipoBanco";
                            } else {
                                toastr.warning(response.message, 'MENSAJE DE SISTEMA');
                                return;
                            }
                        },
                        error: function (xhr, Status, error) {
                            toastr.error("Error en el servidor", "MENSAJE DE SISTEMA");
                            console.error('Error en la solicitud Ajax. Status:', Status, 'Error:', error, 'XHR:', xhr);
                        }
                    });
                }
            });
        });

        $("#btn_Volver").click(function () {
            window.location.href = "/TipoBanco";
        });
    });
</script>