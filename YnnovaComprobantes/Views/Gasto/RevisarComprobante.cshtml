@using System.Security.Claims

@model YnnovaComprobantes.ViewModels.ComprobanteViewModel
@{
    var usuarioIdActual = User.FindFirstValue(ClaimTypes.NameIdentifier);
    ViewData["Title"] = "Ver observaciones";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="card-title w-100 text-center mb-0">Datos del comprobante</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-3 text-center">
                            <h3>@Model.GTipoGasto del <strong id="txt_FechaGasto">@Model.Fecha</strong></h3>
                            <h4>
                                Importe asignado: <strong>@Model.GMoneda @Model.GImporte</strong>
                            </h4>
                            <h4>
                                Monto acumulado: <strong>@Model.GMoneda @Model.MontoAcumulado</strong>
                            </h4>
                            <h5 class="mb-0 d-flex align-items-center justify-content-center">
                                <span class="badge fs-5" id="txt_Estado">@Model.Estado</span>
                            </h5>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="txt_RUC">RUC de la empresa</label>
                            <input disabled type="text" id="txt_RUC" class="form-control" value="@Model.RucEmpresa" maxlength="11">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="txt_Serie">Serie del comprobante</label>
                            <input disabled type="text" id="txt_Serie" class="form-control" value="@Model.Serie" maxlength="4">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="txt_Numero">Número del comprobante</label>
                            <input disabled type="text" id="txt_Numero" class="form-control" value="@Model.Numero">
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="cbx_TipoComprobante">Tipo de comprobante</label>
                            <select disabled id="cbx_TipoComprobante" class="form-control">
                                <option value="" disabled selected>--SELECCIONAR--</option>
                            </select>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="cbx_Concepto">Concepto</label>
                            <select disabled id="cbx_Concepto" class="form-control">
                                <option value="" disabled selected>--SELECCIONAR--</option>
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="cbx_Moneda">Moneda</label>
                            <select disabled id="cbx_Moneda" class="form-control"></select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="txt_Monto">Monto</label>
                            <input disabled type="number" id="txt_Monto" class="form-control" step="0.01" value="@Model.Monto">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="txt_Fecha">Fecha</label>
                            <input disabled type="date" id="txt_Fecha" class="form-control">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="txt_Descripcion">Descripción</label>
                            <textarea disabled id="txt_Descripcion" class="form-control" rows="3">@Model.Descripcion</textarea>
                        </div>

                        <div class="col-md-12 mb-4 text-center">
                            <label>Archivo de Comprobante (Imagen, PDF)</label>

                            @if (!string.IsNullOrEmpty(Model.Archivo))
                            {
                                <div id="existingFileArea" class="mb-3">
                                    <p class="text-muted small">Archivo actual almacenado:</p>
                                    <a href="@Model.Archivo" target="_blank" class="btn btn-outline-info btn-sm">
                                        <i class="fas @(Model.Archivo.EndsWith(".pdf") ? "fa-file-pdf" : "fa-image")"></i> Ver archivo actual
                                    </a>
                                    <hr />
                                </div>
                            }
                        </div>
                        <div class="col-md-12 text-center">
                            <button id="btn_Volver" type="button" class="btn btn-danger mr-2">Volver</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card card-info direct-chat shadow">
                <div class="card-header">
                    <h4 class="card-title w-100 text-center">Control de observaciones</h4>
                </div>
                <div class="card-body">
                    <div id="chatContainer" class="direct-chat-messages" style="height: 350px;">
                        <div id="emptyChatNote" class="text-center text-muted mt-5">
                            <i class="fas fa-comments fa-3x"></i>
                            <p class="mt-2">No hay observaciones registradas.</p>
                        </div>
                    </div>
                </div>
                @if (Model.Estado != "Aprobado" && Model.Estado != "Rechazado")
                {
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <select id="cbx_Prioridad" class="form-control form-control-sm">
                                    <option value="B">Prioridad Baja</option>
                                    <option value="M" selected>Prioridad Media</option>
                                    <option value="A">Prioridad Alta</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <textarea id="txt_Observacion" placeholder="Escriba una observación..." class="form-control" rows="2"></textarea>
                                    <span class="input-group-append">
                                        <button id="btn_AgregarObservacion" type="button" class="btn btn-success">
                                            <i class="fas fa-paper-plane"></i> Enviar
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        fct_GetMonedas();
        fct_GetTipoComprobante();
        fct_GetConceptos();
        fct_MostrarEstado();

        // Formatear fecha para el input date (HTML5 requiere YYYY-MM-DD)
        if ('@Model.Fecha') {
            $('#txt_Fecha').val(moment('@Model.Fecha', 'DD/MM/YYYY').format('YYYY-MM-DD'));
        }

        // --- 2. Funciones de Carga de Selects (Configuración Original Restaurada) ---
        function fct_GetMonedas() {
            $.getJSON('/Gasto/GetMonedasData', function (response) {
                if (response.status === true) {
                    let items = '<option disabled selected>--SELECCIONAR--</option>';
                    $.each(response.data, function (index, item) {
                        items += `<option value="${item.id}">${item.simbolo} ${item.nombre}</option>`;
                    });
                    $('#cbx_Moneda').html(items).val('@Model.MonedaId').trigger('change');
                } else {
                    toastr.error('Ocurrió un error al listar las monedas', 'MENSAJE DE SISTEMA');
                }
            });
        }

        function fct_GetTipoComprobante() {
            $.getJSON('/Gasto/GetTipoComprobanteData', function (response) {
                if (response.status === true) {
                    var dataTC = response.data.map(function(tc) {
                        return { id: tc.id, text: tc.codigo + ' - ' + tc.descripcion };
                    });
                    $('#cbx_TipoComprobante').empty().select2({
                        theme: 'bootstrap4',
                        data: dataTC,
                        placeholder: 'Buscar tipo de comprobante...',
                        allowClear: true,
                        language: { noResults: function () { return "No se encontraron resultados"; } }
                    });
                    $('#cbx_TipoComprobante').val('@Model.TipoComprobanteId').trigger('change');
                } else {
                    toastr.error('Ocurrió un error al listar los tipos de comprobantes.', 'MENSAJE DE SISTEMA');
                }
            });
        }

        function fct_GetConceptos() {
            $.getJSON('/Gasto/GetConceptoData', function (response) {
                if (response.status === true) {
                    var dataConcepto = response.data.map(function(c) {
                        return { id: c.id, text: c.nombre };
                    });
                    $('#cbx_Concepto').empty().select2({
                        theme: 'bootstrap4',
                        data: dataConcepto,
                        placeholder: 'Buscar concepto...',
                        allowClear: true,
                        language: { noResults: function () { return "No se encontraron resultados"; } }
                    });
                    $('#cbx_Concepto').val('@Model.ConceptoId').trigger('change');
                } else {
                    toastr.error('Ocurrió un error al listar los conceptos.', 'MENSAJE DE SISTEMA');
                }
            });
        }

        // --- 3. Lógica de Interfaz y Estados ---
        function fct_MostrarEstado() {
            let spanEstado = $('#txt_Estado');
            let estadoActual = '@Model.Estado';
            let badgeClass = "";
            switch (estadoActual) {
                case "Aprobado": case "Activo": case "Pagado": badgeClass = "badge-success"; break;
                case "Pendiente": badgeClass = "badge-warning text-dark"; break;
                case "Rechazado": case "Anulado": case "Inactivo": badgeClass = "badge-danger"; break;
                default: badgeClass = "badge-secondary";
            }
            spanEstado.removeClass("bg-success bg-warning bg-danger bg-secondary text-dark");
            spanEstado.addClass("badge " + badgeClass).text(estadoActual);
        }

        $("#btn_Volver").click(() => window.location.href = "/Gasto/VerGasto/@Model.GId");
    });

    // Lógica de observaciones
        $(document).ready(function () {
        // Configurar Moment.js en español
        moment.locale('es');

        // --- CARGA INICIAL DE OBSERVACIONES ---
        fct_CargarHistorialObservaciones();

        function fct_CargarHistorialObservaciones() {
            $.getJSON('/Gasto/GetObservacionesData', { 'id': '@Model.Id' }, function (response) {
                if (response.status) {
                    let chatContainer = $("#chatContainer");
                    chatContainer.empty();

                    if (response.data && response.data.length > 0) {
                        // Ordenamos de antiguo a nuevo para el chat
                        let observaciones = response.data.reverse();

                        observaciones.forEach(function (obs) {
                            let esMio = obs.usuarioId != '@Model.GUsuarioId';
                            fct_RenderizarMensajeChat(obs, esMio);
                        });

                        // Bajar el scroll al cargar todo
                        fct_ScrollAlFinal();
                    } else {
                        chatContainer.html('<div id="emptyChatNote" class="text-center text-muted mt-5"><i class="fas fa-comments fa-3x"></i><p class="mt-2">No hay observaciones registradas.</p></div>');
                    }
                }
            });
        }

        // --- LÓGICA DE ENVÍO ---
        $("#btn_AgregarObservacion").click(function () {
            let mensaje = $("#txt_Observacion").val().trim();
            let prioridad = $("#cbx_Prioridad").val();
            let idComprobante = '@Model.Id';

            if (mensaje === "") {
                toastr.warning("Debe escribir un mensaje", "SISTEMA");
                return;
            }

            // Deshabilitar para evitar doble envío
            $("#btn_AgregarObservacion").prop("disabled", true);

            let formData = new FormData();
            formData.append("ComprobanteId", idComprobante);
            formData.append("Prioridad", prioridad);
            formData.append("Mensaje", mensaje);
            formData.append("UsuarioId", '@usuarioIdActual');
            formData.append("actualizarEstado", true);

            $.ajax({
                url: "/Gasto/RegistrarObservacion",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.status) {
                        // 1. Quitar nota de vacío si es el primer mensaje
                        $("#emptyChatNote").remove();

                        // 2. Pintar el mensaje nuevo (esMio = true)
                        let nuevaObs = {
                            mensaje: mensaje,
                            prioridad: prioridad,
                            fechaCreacion: new Date(),
                            usuarioId: 2
                        };
                        fct_RenderizarMensajeChat(nuevaObs, true);

                        // 3. LIMPIAR TEXTAREA
                        $("#txt_Observacion").val("");

                        // 4. SCROLL HASTA ABAJO
                        fct_ScrollAlFinal();

                        toastr.success("Enviado", "SISTEMA");
                    } else {
                        toastr.error(response.message, "ERROR");
                    }
                },
                error: function () {
                    toastr.error("Error de conexión", "SISTEMA");
                },
                complete: function() {
                    $("#btn_AgregarObservacion").prop("disabled", false);
                }
            });
        });

        // --- FUNCIONES AUXILIARES ---

        function fct_RenderizarMensajeChat(obs, esMio) {
            let colorClase = "";
            switch (obs.prioridad) {
                case 'A': colorClase = "bg-danger text-white"; break;
                case 'M': colorClase = "bg-warning text-dark"; break;
                case 'B': colorClase = "bg-info text-white"; break;
                default: colorClase = "bg-secondary text-white";
            }

            let alignmentClass = esMio ? "right" : "";
            let nameFloat = esMio ? "float-right" : "float-left";
            let dateFloat = esMio ? "float-left" : "float-right";
            let fechaFormateada = moment(obs.fechaCreacion).format('DD MMM hh:mm A');

            let html = `
                <div class="direct-chat-msg ${alignmentClass}">
                    <div class="direct-chat-infos clearfix">
                        <span class="direct-chat-name ${nameFloat}">${esMio ? 'Yo' : 'Usuario'}</span>
                        <span class="direct-chat-timestamp ${dateFloat}">${fechaFormateada}</span>
                    </div>
                    <img class="direct-chat-img" src="/uploads/fotos/default-user.png" alt="avatar">
                    <div class="direct-chat-text ${colorClase}">
                        ${obs.mensaje}
                    </div>
                </div>`;

            $("#chatContainer").append(html);
        }

        function fct_ScrollAlFinal() {
            let container = $("#chatContainer");
            container.animate({
                scrollTop: container.prop("scrollHeight")
            }, 500);
        }

        // Atajo de teclado: Ctrl + Enter para enviar
        $("#txt_Observacion").keypress(function (e) {
            if (e.which == 13 && !e.shiftKey) {
                e.preventDefault();
                $("#btn_AgregarObservacion").click();
            }
        });
    });
</script>

<style>
    .drop-zone {
        min-height: 180px;
        transition: all 0.3s;
        background: #fafafa;
    }

        .drop-zone:hover {
            background: #f0f7ff;
            border-color: #007bff !important;
        }

    .badge {
        padding: 0.6em 1em;
        font-weight: 500;
    }
</style>