@model YnnovaComprobantes.ViewModels.GastoViewModel
@{
    ViewData["Title"] = "Editar entrega a rendir";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="text-center mb-0">Editar entrega a rendir</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cbx_Empresa">Empresa</label>
                            <select id="cbx_Empresa" class="form-control">
                                <option value="" disabled selected>--SELECCIONAR--</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="cbx_Usuario">Usuario</label>
                            <select id="cbx_Usuario" class="form-control">
                                <option value="" disabled selected>--SELECCIONAR--</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="cbx_TipoGasto">Tipo de gasto</label>
                            <select id="cbx_TipoGasto" class="form-control">
                                <option value="" disabled selected>--SELECCIONAR--</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="txt_Fecha">Fecha</label>
                            <input type="date" id="txt_Fecha" class="form-control">
                        </div>

                        <div class="col-md-6 mb-3" id="cont_TipoRendicion">
                            <label for="cbx_TipoRendicion">Tipo de rendición</label>
                            <select id="cbx_TipoRendicion" class="form-control"></select>
                        </div>
                        <div class="col-md-6 mb-3" id="cont_Banco">
                            <label for="cbx_Banco">Banco</label>
                            <select id="cbx_Banco" class="form-control"></select>
                        </div>
                        <div class="col-md-6 mb-3" id="cont_Moneda">
                            <label for="cbx_Moneda">Moneda</label>
                            <select id="cbx_Moneda" class="form-control"></select>
                        </div>
                        <div class="col-md-6 mb-3" id="cont_Importe">
                            <label for="txt_Importe">Importe</label>
                            <input type="number" id="txt_Importe" class="form-control" step="0.01" value="@Model.Importe">
                        </div>
                        <div class="col-md-12 mb-3" id="cont_Descripcion">
                            <label for="txt_Descripcion">Descripción</label>
                            <textarea id="txt_Descripcion" class="form-control" rows="4">@Model.Descripcion</textarea>
                        </div>
                        <div class="col-md-12 text-center">
                            <button id="btn_Volver" type="button" class="btn btn-danger">Volver</button>
                            <button id="btn_Editar" type="button" class="btn btn-primary">Editar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        fct_GetEmpresas();
        fct_GetTipoGasto();
        fct_GetTipoRendicion();
        fct_GetBancos();
        fct_GetMonedas();
         
        if ('@Model.Fecha') {
            $('#txt_Fecha').val(moment('@Model.Fecha', 'DD/MM/YYYY').format('YYYY-MM-DD'));
        }
        
        function fct_GetEmpresas() {
            $.getJSON('/Gasto/GetEmpresaData', function (response) {
                if (response.status === true) {
                    let empresas = response.data;
                    var dataSelect2 = empresas.map(function(empresa) {
                        return {
                            id: empresa.id,
                            text: empresa.ruc + ' - ' + empresa.nombre
                        };
                    });

                    $('#cbx_Empresa').empty().select2({
                        theme: 'bootstrap4',
                        data: dataSelect2,
                        placeholder: "Buscar empresa...",
                        allowClear: true,
                        language: {
                            noResults: function () {
                                return "No se encontraron resultados";
                            }
                        }
                    });

                    var usuarioIdPreseleccionado = '@Model.UsuarioId';

                    $('#cbx_Empresa').on('change', function() {
                        $.getJSON('/Gasto/GetUsuariosData', { 'EmpresaId': $('#cbx_Empresa').val() }, function (response) {
                            if (response.status === true) {
                                let usuarios = response.data;
                                var dataUsuariosSelect2 = usuarios.map(function(usuario) {
                                    return {
                                        id: usuario.id,
                                        text: usuario.dni + ' - ' + usuario.nombre,
                                    }
                                });

                                $('#cbx_Usuario').empty().select2({
                                    theme: 'bootstrap4',
                                    data: dataUsuariosSelect2,
                                    placeholder: "Buscar usuario...",
                                    allowClear: true,
                                    language: {
                                        noResults: function () {
                                            return "No se encontraron resultados"; 
                                        }
                                    }
                                });

                                if (usuarioIdPreseleccionado) {
                                    var existeUsuario = dataUsuariosSelect2.find(u => u.id == usuarioIdPreseleccionado);

                                    if (existeUsuario) {
                                        $('#cbx_Usuario').val(usuarioIdPreseleccionado).trigger('change');
                                    }

                                    usuarioIdPreseleccionado = null;
                                }
                            } else {
                                toastr.error('Ocurrió un error al listar a los usuarios', 'MENSAJE DE SISTEMA');
                                console.error('Error', response.message);
                            }
                        });
                    });

                    $('#cbx_Empresa').val('@Model.EmpresaId').trigger('change');

                } else {
                    toastr.error('Ocurrió un error al listar las empresas', 'MENSAJE DE SISTEMA');
                    console.error('Error', response.message);
                }
            });
        }

        function fct_GetTipoGasto() {
            $.getJSON('/Gasto/GetTiposGastosData', function (response) {
                if (response.status === true) {
                    let items = '<option disabled selected>--SELECCIONAR--</option>';

                    $.each(response.data, function (index, item) {
                        items += `<option value="${item.id}">${item.nombre}</option>`;
                    });

                    $('#cbx_TipoGasto').html(items);
                    $('#cbx_TipoGasto').val('@Model.TipoGastoId').trigger('change');
                } else {
                    toastr.error('Ocurrió un error al listar a los usuarios', 'MENSAJE DE SISTEMA');
                    console.error('Error', response.message);
                }
            });
        }

        function fct_GetTipoRendicion() {
            $.getJSON('/Gasto/GetTiposRendicionesData', function (response) {
                if (response.status === true) {
                    let tiposRendiciones = response.data;
                    var dataTR = tiposRendiciones.map(function(tipoRendicion) {
                        return {
                            id: tipoRendicion.id,
                            text: tipoRendicion.codigo + ' - ' + tipoRendicion.descripcion,
                        }
                    });

                    $('#cbx_TipoRendicion').empty().select2({
                        theme: 'bootstrap4',
                        data: dataTR,
                        placeholder: "Buscar tipo de rendición...",
                        allowClear: true,
                        language: {
                            noResults: function () {
                                return "No se encontraron resultados";
                            }
                        }
                    });

                    $('#cbx_TipoRendicion').val('@Model.TipoRendicionId').trigger('change');
                } else {
                    toastr.error('Ocurrió un error al listar a los tipos de rendiciones', 'MENSAJE DE SISTEMA');
                    console.error('Error', response.message);
                }
            });
        }

        function fct_GetBancos() {
            $.getJSON('/Gasto/GetBancosData', function (response) {
                if (response.status === true) {
                    let bancos = response.data;
                    var dataBancos = bancos.map(function(banco) {
                        return {
                            id: banco.id,
                            text: banco.codigo + ' - ' + banco.descripcion,
                        }
                    });

                    $('#cbx_Banco').empty().select2({
                        theme: 'bootstrap4',
                        data: dataBancos,
                        placeholder: 'Buscar banco...',
                        allowClear: true,
                        language: {
                            noResults: function () {
                                return "No se encontraron resultados";
                            }
                        }
                    });

                    $('#cbx_Banco').val('@Model.BancoId').trigger('change');
                } else {
                    toastr.error('Ocurrió un error al listar a los bancos (entidades financieras)', 'MENSAJE DE SISTEMA');
                    console.error('Error', response.message);
                }
            });
        }

        function fct_GetMonedas() {
            $.getJSON('/Gasto/GetMonedasData', function (response) {
                if (response.status === true) {
                    let items = '<option disabled selected>--SELECCIONAR--</option>';

                    $.each(response.data, function (index, item) {
                        items += `<option value="${item.id}">${item.simbolo} ${item.nombre}</option>`;
                    });

                    $('#cbx_Moneda').html(items);
                    $('#cbx_Moneda').val("@Model.MonedaId").trigger('change');
                } else {
                    toastr.error('Ocurrió un error al listar a las monedas', 'MENSAJE DE SISTEMA');
                    console.error('Error', response.message);
                }
            });
        }

        $("#btn_Editar").click(function () {
            let textoSeleccionado = $('#cbx_TipoGasto').find('option:selected').text().trim().toUpperCase();

            if (!textoSeleccionado) {
                toastr.warning('Debe seleccionar un tipo de gasto.', 'MENSAJE DE SISTEMA');
                return;
            }

            if (textoSeleccionado === "ANTICIPO") {
                let empresa = $('#cbx_Empresa').val();
                let usuario = $('#cbx_Usuario').val();
                let tipoGasto = $('#cbx_TipoGasto').val();
                let fecha = $('#txt_Fecha').val();
                let tipoRendicion = $('#cbx_TipoRendicion').val();
                let banco = $('#cbx_Banco').val();
                let moneda = $('#cbx_Moneda').val();
                let importe = $('#txt_Importe').val();
                let descripcion = $('#txt_Descripcion').val();

                if (!empresa || !usuario || !tipoGasto || !fecha || !tipoRendicion || !banco || !moneda || !importe) {
                    toastr.warning("Todos los campos son obligatorios", "MENSAJE DE SISTEMA");
                    return;
                }

                Swal.fire({
                    title: "¿Estás seguro?",
                    text: "Esta acción editará la entrega a rendir. ¿Deseas continuar?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Sí, editar entrega a rendir",
                    cancelButtonText: "Cancelar",
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {

                        let formData = new FormData();
                        formData.append("Id", '@Model.Id');
                        formData.append("Fecha", fecha);
                        formData.append("Importe", importe);
                        formData.append("Descripcion", descripcion);
                        formData.append("EmpresaId", empresa);
                        formData.append("BancoId", banco);
                        formData.append("TipoRendicionId", tipoRendicion);
                        formData.append("UsuarioId", usuario);
                        formData.append("TipoGastoId", tipoGasto);
                        formData.append("MonedaId", moneda);

                        $.ajax({
                            url: "/Gasto/EditarGasto",
                            type: "POST",
                            processData: false,
                            contentType: false,
                            data: formData,
                            success: function (response) {
                                if (response.status === true) {
                                    toastr.success(response.message, "MENSAJE DE SISTEMA");
                                    window.location.href = "/Gasto";
                                } else {
                                    toastr.warning(response.message, 'MENSAJE DE SISTEMA');
                                    return;
                                }
                            },
                            error: function (xhr, Status, error) {
                                toastr.error("Error en el servidor", "MENSAJE DE SISTEMA");
                                console.error('Error en la solicitud Ajax. Status:', Status, 'Error:', error, 'XHR:', xhr);
                            }
                        });
                    }
                });
            } else if (textoSeleccionado === "REEMBOLSO") {
                let empresa = $('#cbx_Empresa').val();
                let usuario = $('#cbx_Usuario').val();
                let tipoGasto = $('#cbx_TipoGasto').val();
                let fecha = $('#txt_Fecha').val();
                let descripcion = $('#txt_Descripcion').val();

                if (!empresa || !usuario || !tipoGasto || !fecha) {
                    toastr.warning("Todos los campos son obligatorios", "MENSAJE DE SISTEMA");
                    return;
                }

                Swal.fire({
                    title: "¿Estás seguro?",
                    text: "Esta acción registrará al reembolso. ¿Deseas continuar?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Sí, registrar reembolso",
                    cancelButtonText: "Cancelar",
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {

                        let formData = new FormData();
                        formData.append("Fecha", fecha);
                        formData.append("Descripcion", descripcion);
                        formData.append("EmpresaId", empresa);
                        formData.append("UsuarioId", usuario);
                        formData.append("TipoGastoId", tipoGasto);
                        formData.append("Importe", 0);

                        $.ajax({
                            url: "/Gasto/RegistrarGasto",
                            type: "POST",
                            processData: false,
                            contentType: false,
                            data: formData,
                            success: function (response) {
                                if (response.status === true) {
                                    toastr.success(response.message, "MENSAJE DE SISTEMA");
                                    window.location.href = "/Gasto";
                                } else {
                                    toastr.warning(response.message, 'MENSAJE DE SISTEMA');
                                    return;
                                }
                            },
                            error: function (xhr, Status, error) {
                                toastr.error("Error en el servidor", "MENSAJE DE SISTEMA");
                                console.error('Error en la solicitud Ajax. Status:', Status, 'Error:', error, 'XHR:', xhr);
                            }
                        });
                    }
                });
            }
        });

        $('#cbx_TipoGasto').on('change', function () {
            let textoSeleccionado = $(this).find('option:selected').text().trim().toUpperCase();

            let anticipoContent = $('#cont_TipoRendicion, #cont_Banco, #cont_Moneda, #cont_Importe');

            if (textoSeleccionado === "REEMBOLSO") {
                anticipoContent.hide();
                anticipoContent.find('input, select, textarea').val('');
            } else {
                anticipoContent.show();
            }
        });

        $("#btn_Volver").click(function () {
            window.location.href = "/Gasto";
        });
    });
</script>