@model YnnovaComprobantes.Models.Empresa
@{
    ViewData["Title"] = "Editar Empresa";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="text-center mb-0">Editar empresa</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="txt_RUC">RUC</label>
                            <div class="input-group">
                                <input type="text" id="txt_RUC" class="form-control" placeholder="RUC" value="@Model.Ruc">
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="txt_Nombre">Nombre</label>
                            <div class="input-group">
                                <input type="text" id="txt_Nombre" class="form-control" placeholder="Nombre" value="@Model.Nombre">
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="txt_Descripcion">Descripción</label>
                            <div class="input-group">
                                <textarea id="txt_Descripcion"
                                          class="form-control"
                                          placeholder="Introduce la descripción aquí..."
                                          rows="4">@Model.Descripcion</textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="cbx_Estado">Estado</label>
                            <div class="input-group">
                                <select id="cbx_Estado" class="form-control">
                                    <option value="" disabled selected>--SELECCIONAR--</option>
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 text-center">
                            <button id="btn_Volver" type="button" class="btn btn-danger">Volver</button>
                            <button id="btn_Editar" type="button" class="btn btn-primary">Editar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $('#cbx_Estado').val('@(Model.Estado ? 1 : 0)');

        // 1. Validación de RUC (solo dígitos y límite de 11)
            $('#txt_RUC').on('keypress', function (e) {
                // Obtenemos el código de la tecla presionada
                var charCode = (e.which) ? e.which : e.keyCode;

                // Permitir solo dígitos (48-57) y teclas de control
                if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                    e.preventDefault();
                    return false;
                }

                // Limitar la longitud a 11 dígitos (antes de que se añada el nuevo dígito)
                if ($(this).val().length >= 11) {
                    // Si es un dígito, prevenir la entrada
                    if (charCode > 47 && charCode < 58) {
                        e.preventDefault();
                        return false;
                    }
                }
            });

        $("#btn_Editar").click(function () {
            let ruc = $("#txt_RUC").val().trim();
            let nombre = $("#txt_Nombre").val().trim();
            let descripcion = $("#txt_Descripcion").val().trim();
            let estado = $('#cbx_Estado').val();

            if (!ruc || !nombre || !descripcion || !estado) {
                toastr.warning("Todos los campos son obligatorios", "MENSAJE DE SISTEMA");
                return;
            }

            if (ruc.length !== 11) {
                toastr.warning("El RUC debe tener exactamente 11 dígitos.", "MENSAJE DE SISTEMA");
                return;
            }

            Swal.fire({
                title: "¿Estás seguro?",
                text: "Esta acción editará a la empresa. ¿Deseas continuar?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Sí, editar empresa",
                cancelButtonText: "Cancelar",
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {

                    let formData = new FormData();
